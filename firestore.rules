rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Admin is now determined by checking the user's email.
    // This is less secure than custom claims but simpler for this context.
    function isAdminByEmail() {
        return isSignedIn() && request.auth.token.email == "admin@petshop.com";
    }

    match /users/{userId} {
      allow read, write: if false;

      match /customers/{customerId} {
        allow read, create, update, delete: if isOwner(userId);
      }

      match /pets/{petId} {
        allow read, create, update, delete: if isOwner(userId);
      }
    }

    match /appointments/{appointmentId} {
        allow get, list: if isSignedIn();
        // Allow any signed-in user to create an appointment for themselves
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Only allow admins (by email) to update or delete.
        allow update, delete: if isAdminByEmail();
    }
  }
}
