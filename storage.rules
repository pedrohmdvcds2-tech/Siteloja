rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Apenas permite que usuários autenticados façam upload na pasta de carteiras de vacinação.
    // O {userId} no path garante que um usuário só possa fazer upload em sua própria "pasta".
    match /vaccination-cards/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
